@model MedicalAppointmentApp.Web.Models.RoleViewModel

<h2>Eliminar Rol</h2>

<p>¿Estás seguro que deseas eliminar este rol?</p>

<div class="form-group">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.RoleId</dd>
        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.RoleName</dd>
        <dt class="col-sm-2">Creado</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("dd/MM/yyyy")</dd>
        <dt class="col-sm-2">Activo</dt>
        <dd class="col-sm-10">@Model.IsActive</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="RoleId" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>