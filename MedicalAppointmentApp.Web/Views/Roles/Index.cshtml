@model IEnumerable<MedicalAppointmentApp.Web.Models.RoleViewModel>

<h2>Roles</h2>

<a asp-action="Create" class="btn btn-primary">Agregar Nuevo Rol</a>

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Creado</th>
            <th>Actualizado</th>
            <th>Activo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.RoleId</td>
                <td>@role.RoleName</td>
                <td>@role.CreatedAt.ToString("dd/MM/yyyy")</td>
                <td>@role.UpdatedAt.ToString("dd/MM/yyyy")</td>
                <td>@(role.IsActive ? "Sí" : "No")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@role.RoleId" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@role.RoleId" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>