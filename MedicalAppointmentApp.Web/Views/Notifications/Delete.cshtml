model MedicalAppointmentApp.Models.NotificationViewModel

<h2>Eliminar Notificación</h2>

<p>¿Estás seguro de que deseas eliminar la siguiente notificación?</p>

<div>
    <dl class="row">
        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.UserID</dd>

        <dt class="col-sm-2">Mensaje</dt>
        <dd class="col-sm-10">@Model.Message</dd>

        <dt class="col-sm-2">Fecha</dt>
        <dd class="col-sm-10">@Model.GetFormattedDate()</dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="NotificationID" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
