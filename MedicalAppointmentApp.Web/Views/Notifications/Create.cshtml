@model MedicalAppointmentApp.Application.Dtos.System.Notifications.NotificationsSaveDto

<h2>Crear Notificación</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="UserID">Usuario</label>
        <input asp-for="UserID" class="form-control" />
        <span asp-validation-for="UserID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Message">Mensaje</label>
        <textarea asp-for="Message" class="form-control"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="SentAt">Fecha</label>
        <input asp-for="SentAt" type="datetime-local" class="form-control" />
        <span asp-validation-for="SentAt" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>