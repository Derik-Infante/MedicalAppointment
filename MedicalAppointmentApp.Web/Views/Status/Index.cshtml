@model List<StatusViewModel>

@{
    ViewData["Title"] = "Listado de Estados";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>StatusId</th>
            <th>StatusName</th>
            <th>CreatedAt</th>
            <th>UpdatedAt</th>
            <th>IsActive</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var status in Model)
        {
            <tr>
                <td>@status.StatusId</td>
                <td>@status.StatusName</td>
                <td>@status.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@status.UpdatedAt.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>@status.IsActive</td>
                <td>
                    <a href="@Url.Action("Edit", "Status", new { id = status.StatusId })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", "Status", new { id = status.StatusId })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Status")" class="btn btn-success">Nuevo Estado</a>