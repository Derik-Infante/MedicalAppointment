@model StatusViewModel

@{
    ViewData["Title"] = "Eliminar Estado";
}

<h1>@ViewData["Title"]</h1>

<p>¿Estás seguro de que deseas eliminar el estado "@Model.StatusName"?</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="StatusId" value="@Model.StatusId" />
    <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
</form>

<a href="@Url.Action("Index", "Status")" class="btn btn-secondary">Cancelar</a>