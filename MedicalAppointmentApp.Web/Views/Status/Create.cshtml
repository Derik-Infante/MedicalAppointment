@model StatusViewModel

@{
    ViewData["Title"] = "Crear Estado";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="StatusName">Nombre del Estado</label>
        <input type="text" class="form-control" id="StatusName" name="StatusName" value="@Model.StatusName" required />
    </div>

    <div class="form-group">
        <label for="IsActive">¿Está activo?</label>
        <input type="checkbox" id="IsActive" name="IsActive" checked="@Model.IsActive" />
    </div>

    <button type="submit" class="btn btn-primary">Crear</button>
</form>

<a href="@Url.Action("Index", "Status")" class="btn btn-secondary">Volver</a>